switch,checkbox,radio {
    position: relative;
}

switch::after,switch::before {
    font-family: "iconfont";
    content: "营业";
    position: absolute;
    color: #fff!important;
    top: 0%;
    font-size: 26rpx;
    line-height: 48rpx;
    width: 66rpx;
    text-align: center;
    pointer-events: none;
    transform: scale(0,0);
    transition: all 0.3s ease-in-out 0s;
    z-index: 9;
}

switch::after {
    content: "营业";
    left: 16rpx;
    transform: scale(1,1);
    right: auto;
}

switch::before {
    content: "休息";
    right: 16rpx;
    transform: scale(1,1);
    left: auto;
}

switch[checked]::after {
    transform: scale(1,1);
}

switch[checked]::before {
    transform: scale(0,0);
}

