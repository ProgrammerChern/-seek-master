.userinfo2 {
    position: relative;
    height: 160rpx;
    color: #000;
    display: flex;
    flex-direction: row;
    background: #fff;
    align-items: center;
}

.userinfo-avatar {
    overflow: hidden;
    display: block;
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    margin-top: 20rpx;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 3px 3px 10px rgba(0,0,0,0.2);
}